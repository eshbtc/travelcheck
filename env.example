# TravelCheck - Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration (replacing Firebase)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Gmail OAuth Configuration
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REDIRECT_URI=https://your-domain.com/auth/callback?provider=gmail

# Office365 OAuth Configuration
OFFICE365_CLIENT_ID=your_office365_client_id
OFFICE365_CLIENT_SECRET=your_office365_client_secret
OFFICE365_REDIRECT_URI=https://your-domain.com/auth/callback/office365

# Google Cloud Vision API
GOOGLE_CLOUD_VISION_API_KEY=your_vision_api_key

# Google AI API
GOOGLE_AI_API_KEY=your_google_ai_key

# Google Cloud Document AI
GOOGLE_CLOUD_DOCUMENT_AI_PROJECT_ID=your_project_id
GOOGLE_CLOUD_DOCUMENT_AI_LOCATION=us
# If you have separate processors, set these; otherwise set GOOGLE_CLOUD_DOCUMENT_AI_PROCESSOR_ID
GOOGLE_CLOUD_DOCUMENT_AI_PASSPORT_PROCESSOR_ID=your_passport_processor_id
GOOGLE_CLOUD_DOCUMENT_AI_FLIGHT_PROCESSOR_ID=your_flight_processor_id
# Fallback single processor ID (used if specific IDs above are not provided)
GOOGLE_CLOUD_DOCUMENT_AI_PROCESSOR_ID=your_default_processor_id

# Application Configuration
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com/api
NEXT_PUBLIC_ADMIN_EMAILS=admin@example.com
ADMIN_EMAILS=admin@example.com

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Email Configuration (Optional - for custom email sending)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@your-domain.com

# Monitoring & Analytics
GOOGLE_ANALYTICS_ID=your_ga_id
SENTRY_DSN=your_sentry_dsn

# Maps
NEXT_PUBLIC_MAPBOX_TOKEN=your_mapbox_access_token

# Development/Production Flags
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production
