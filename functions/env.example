# Firebase Functions Environment Variables Example
# Copy this file to .env and fill in your actual values

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Gmail OAuth Configuration
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REDIRECT_URI=https://your-domain.com/auth/oauth-callback/gmail

# Office365 OAuth Configuration
OFFICE365_CLIENT_ID=your_office365_client_id
OFFICE365_CLIENT_SECRET=your_office365_client_secret
OFFICE365_REDIRECT_URI=https://your-domain.com/auth/oauth-callback/office365

# Google Cloud Vision API
GOOGLE_CLOUD_VISION_API_KEY=your_vision_api_key

# Google Cloud Document AI
GOOGLE_CLOUD_DOCUMENT_AI_PROJECT_ID=your_project_id
GOOGLE_CLOUD_DOCUMENT_AI_LOCATION=us
# If you use separate processors, set these; otherwise set GOOGLE_CLOUD_DOCUMENT_AI_PROCESSOR_ID
GOOGLE_CLOUD_DOCUMENT_AI_PASSPORT_PROCESSOR_ID=your_passport_processor_id
GOOGLE_CLOUD_DOCUMENT_AI_FLIGHT_PROCESSOR_ID=your_flight_processor_id
# Fallback single processor ID (used if specific IDs above are not provided)
GOOGLE_CLOUD_DOCUMENT_AI_PROCESSOR_ID=your_default_processor_id

# Application Configuration
APP_URL=https://your-domain.com
API_URL=https://your-region-your_project_id.cloudfunctions.net

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key
ENFORCE_APP_CHECK=false

# App Check Configuration
APPCHECK_DEBUG_TOKEN=8917507E-AC21-4A4B-B09A-054E88E423EA

# Email Configuration (Optional)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@your-domain.com

# Monitoring & Analytics
GOOGLE_ANALYTICS_ID=your_ga_id
SENTRY_DSN=your_sentry_dsn

# Development/Production Flags
NODE_ENV=production
