# Backend Environment Variables
# Copy this file to .env and fill in your values

# Application
APP_NAME=Travel History Tracker
VERSION=1.0.0
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/travel_history

# Email APIs
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=http://localhost:8000/api/v1/auth/gmail/callback

OFFICE365_CLIENT_ID=your-office365-client-id
OFFICE365_CLIENT_SECRET=your-office365-client-secret
OFFICE365_REDIRECT_URI=http://localhost:8000/api/v1/auth/office365/callback

# OCR Settings
TESSERACT_PATH=/usr/local/bin/tesseract
OCR_CONFIDENCE_THRESHOLD=0.7

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Flight Tracking APIs
FLIGHTY_API_KEY=your-flighty-api-key
FLIGHTRADAR24_API_KEY=your-flightradar24-api-key

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
