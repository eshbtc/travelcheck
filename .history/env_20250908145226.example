# Google Cloud Environment Variables
# Copy this file to .env and fill in your values

# Google Cloud Project
GOOGLE_CLOUD_PROJECT=travelcheck-app
GOOGLE_APPLICATION_CREDENTIALS=service-account-key.json

# Firebase Configuration
FIREBASE_PROJECT_ID=travelcheck-app
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=travelcheck-sa@travelcheck-app.iam.gserviceaccount.com

# Application
APP_NAME=Travel History Tracker
VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production
SECRET_KEY=your-super-secret-key-change-in-production

# Firestore Database
FIRESTORE_DATABASE_ID=(default)

# Google Cloud Storage
GCS_BUCKET_NAME=travelcheck-ai-uploads
GCS_BUCKET_REGION=us-central1

# Google Cloud Vision API
VISION_API_ENABLED=true
VISION_CONFIDENCE_THRESHOLD=0.7

# Google AI Studio / Vertex AI
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL_NAME=gemini-pro-vision

# Email APIs
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REDIRECT_URI=https://your-domain.com/api/v1/auth/gmail/callback

OFFICE365_CLIENT_ID=your-office365-client-id
OFFICE365_CLIENT_SECRET=your-office365-client-secret
OFFICE365_REDIRECT_URI=https://your-domain.com/api/v1/auth/office365/callback

# File Storage
MAX_FILE_SIZE=10485760  # 10MB in bytes

# Flight Tracking APIs
FLIGHTY_API_KEY=your-flighty-api-key
FLIGHTRADAR24_API_KEY=your-flightradar24-api-key

# CORS
ALLOWED_ORIGINS=https://your-firebase-project.web.app,https://your-firebase-project.firebaseapp.com

# App Check
APP_CHECK_ENABLED=true
RECAPTCHA_SITE_KEY=your-recaptcha-site-key

# Cloud Run
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=INFO
