rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload and manage their own generic uploads
    match /uploads/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024; // 10MB
    }

    // Users can upload passport images (restrict to image types and size)
    match /passport_images/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024 // 10MB
                   && request.resource.contentType.matches('image/.*');
    }

    // Users can access their generated reports (PDF/JSON)
    match /reports/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && (request.resource.contentType == 'application/pdf'
                       || request.resource.contentType == 'application/json')
                   && request.resource.size < 20 * 1024 * 1024; // 20MB
    }
    
    // Public assets (logos, etc.)
    match /public/{allPaths=**} {
      allow read: if true;
    }
  }
}
